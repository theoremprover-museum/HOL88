#%----------------------------------------------------------------------------%
#% On-armed Conditional Rule                                                  %
#%----------------------------------------------------------------------------%
#
#new_theory`MAX` ? extend_theory `MAX` ? ();;
() : void

#
#let MAX =
# new_definition
#  (`MAX`, "MAX(m,n) = ((m>n) => m | n)") ? definition `MAX` `MAX` ;;
MAX = |- !m n. MAX(m,n) = (m > n => m | n)

#
#let hth9 = ASSIGN_AX "{X = MAX(x,y)}" (MK_NICE `"X := Y"`);;
hth9 = |- {Y = MAX(x,y)}X := Y{X = MAX(x,y)}

